@model SerwisProdV1.Models.City

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Modyfikuj miasto</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/validationForm.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Scripts/jquery-3.3.1.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Powróć", "Index", "Cities", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>Podaj nowe dane dla miasta nr @Model.Id</h4></div>
        <div class="panel-body">
            @using (Html.BeginForm("FinalUpdateCity", "Cities", FormMethod.Post, new { @id = "Form1" }))
            {
                @Html.ValidationSummary()

                <div class="form-group">
                    <label>Nazwa:</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @readonly = true })
                </div>
                <div class="form-group">
                    <label>Koszt transportu:</label>
                    @Html.TextBoxFor(x => x.TransportCost, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Koszt 1 godziny pracy:</label>
                    @Html.TextBoxFor(x => x.CostOfWorkingHour, new { @class = "form-control" })
                </div>
                <div class="text-center">
                    <input type="submit" value="Wyślij dane" />
                </div>
            }
        </div>
    </div>
    <script type="text/javascript">
        $("body").on("submit", "#Form1", function () {
            return confirm("Czy jesteś pewien ?");
        });
    </script>
    
</body>
</html>
