
@model SerwisProdV1.Models.SearchHistory

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Usuń miasto</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Powróć", "Index", "ShowResults", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>Dane gotowego wyrobu, które zamierzasz usunąć</h4></div>
        <div class="panel-body">
            <table class="table table-sm table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Nr</th>
                        <th>Nazwa</th>
                        <th>Powiązane miasto</th>
                        <th>Moduły (części składowe)</th>
                        <th>Koszt produkcji</th>
                        
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Id</td>
                        <td>@Model.Name</td>
                        <td>@ViewBag.cities[Model.CityId]</td>
                        <td>
                            <select>
                                <option>Wyswietl wybrane części składowe</option>
                                <option>@if (!Model.ModuleName1.IsEmpty()) {@Model.ModuleName1}</option>
                                <option>@if (!Model.ModuleName2.IsEmpty()) {@Model.ModuleName2}</option>
                                <option>@if (!Model.ModuleName3.IsEmpty()) {@Model.ModuleName3}</option>
                                <option>@if (!Model.ModuleName4.IsEmpty()) {@Model.ModuleName4}</option>
                            </select>
                        </td>
                        <td>@Model.ProductionCost</td>
                </tbody>
            </table>
            <br />
            <br />
            <br />

            @using (Html.BeginForm("FinalDeleteSearchHistory", "ShowResults"))
            {
                <div class="form-group text-center">
                    <input type="hidden" name="sHId" value="@Model.Id" />
                    <label>Czy jesteś pewien ?</label>
                    <select name="Odpowiedz">
                        <option value="">Wybierz odpowiedź</option>
                        <option value="Tak">Tak</option>
                        <option value="Nie">Nie</option>
                    </select>
                </div>
                <div class="text-center">
                    <input type="submit" value="Wykonaj" />
                </div>
            }
        </div>
    </div>

</body>
</html>
